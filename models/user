const mongoose = require('mongoose')

const dataSchema = new mongoose.Schema({
    name: {
        required: true,
        type: String
    },
    password: {
        required: true,
        type: String
    },
    birthDate: {
        required: false,
        type: Date
    },
    address: {
        required: true,
        type: String
    },
    phone: {
        required: true,
        type: String
    },
    email: {
        required: false,
        type: String
    },
    image: {
        required: false,
        type: String
    },
    type: {
        required: true,
        type: String
    },
    description: {
        required: false,
        type: String
    },
})

module.exports = mongoose.model('user', dataSchema)